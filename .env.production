# Production Environment Configuration
# Copy this file to .env.production and update the values

# Application Settings
VITE_APP_NAME="Sedation Solutions Hub"
VITE_VERSION="1.0.0"

# API Configuration
VITE_API_BASE_URL="https://api.sedationsolutions.com/api"
VITE_API_TIMEOUT=15000
VITE_REQUEST_TIMEOUT=30000
VITE_MAX_CONCURRENT_REQUESTS=20

# Authentication & Security
VITE_ENCRYPTION_KEY="REPLACE-WITH-STRONG-32-CHAR-KEY"
VITE_TOKEN_REFRESH_THRESHOLD=300000
VITE_SESSION_TIMEOUT=14400000
VITE_OBFUSCATION_INTERVAL=1800000
VITE_MAX_LOGIN_ATTEMPTS=3
VITE_TOKEN_LIFETIME=3600
VITE_LOCKOUT_DURATION=1800000
VITE_SESSION_WARNING_TIME=600000

# Security Headers & Policies
VITE_ENABLE_SECURITY_HEADERS=true
VITE_REQUIRE_HTTPS=true
VITE_ENABLE_CSP=true
VITE_ENABLE_HSTS=true
VITE_ENABLE_X_FRAME_OPTIONS=true
VITE_ENABLE_X_CONTENT_TYPE_OPTIONS=true
VITE_ENABLE_REFERRER_POLICY=true

# Rate Limiting
VITE_RATE_LIMIT_ENABLED=true
VITE_RATE_LIMIT_MAX_REQUESTS=50
VITE_RATE_LIMIT_WINDOW_MS=900000
VITE_MAX_REQUEST_SIZE=5242880

# Performance
VITE_ENABLE_COMPRESSION=true
VITE_CACHE_TIMEOUT=300000
VITE_ENABLE_LAZY_LOADING=true

# Logging
VITE_LOG_LEVEL="error"
VITE_ENABLE_CONSOLE_LOGGING=false
VITE_ENABLE_REMOTE_LOGGING=true
VITE_MAX_LOG_SIZE=2097152
VITE_LOG_RETENTION_DAYS=30

# Portal Configuration
VITE_DEFAULT_PORTAL="clinic"
VITE_ENABLED_PORTALS="clinic,internal,patient,sedationist"
VITE_REQUIRE_MFA=true
VITE_SESSION_SHARING=true

# Public Routes
VITE_ENABLED_PUBLIC_ROUTES="login,register,forgot-password,reset-password,verify-email,unauthorized,404"
VITE_LANDING_PAGE="login"
VITE_UNAUTHORIZED_REDIRECT="unauthorized"

# Feature Flags
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_ERROR_TRACKING=true
VITE_ENABLE_PERFORMANCE_MONITORING=true
VITE_ENABLE_USER_FEEDBACK=true
VITE_ENABLE_DEV_TOOLS=false

# Analytics & Monitoring (if enabled)
VITE_GOOGLE_ANALYTICS_ID=""
VITE_SENTRY_DSN=""
VITE_MIXPANEL_TOKEN=""

# Third-party Services
VITE_RECAPTCHA_SITE_KEY=""
VITE_INTERCOM_APP_ID=""

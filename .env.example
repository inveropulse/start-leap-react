# Sedation Solutions Portal - Environment Configuration
# Copy this file to .env.local and configure for your local development environment
# Copy this file to .env.production for production deployment

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
NODE_ENV=development
PORT=8080
HOST=0.0.0.0
VITE_APP_NAME="Sedation Solutions Portal"
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION="Multi-portal healthcare management system for sedation procedures"

# =============================================================================
# API CONFIGURATION
# =============================================================================
VITE_API_BASE_URL=http://localhost:3001
VITE_API_TIMEOUT=30000
VITE_API_RETRY_ATTEMPTS=3
VITE_API_RETRY_DELAY=1000

# =============================================================================
# AUTHENTICATION & SECURITY
# =============================================================================
# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
VITE_JWT_EXPIRES_IN=24h
VITE_SESSION_TIMEOUT=30m
VITE_MAX_LOGIN_ATTEMPTS=5

# =============================================================================
# HEALTHCARE & COMPLIANCE
# =============================================================================
VITE_HIPAA_AUDIT_ENABLED=true
VITE_AUDIT_LOG_LEVEL=info
VITE_DATA_ENCRYPTION_ENABLED=true
VITE_PII_MASKING_ENABLED=true

# =============================================================================
# AZURE CONFIGURATION
# =============================================================================
AZURE_CLIENT_ID=your-azure-client-id
AZURE_TENANT_ID=your-azure-tenant-id
APPLICATIONINSIGHTS_CONNECTION_STRING=your-app-insights-connection-string
VITE_ENABLE_APPLICATION_INSIGHTS=true

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=postgres://sedation_user:sedation_pass@localhost:5432/sedation_dev
DATABASE_SSL_MODE=require
DATABASE_POOL_SIZE=10

# =============================================================================
# CACHE CONFIGURATION (Azure Cache for Redis)
# =============================================================================
REDIS_URL=redis://localhost:6379
REDIS_TLS_ENABLED=false

# =============================================================================
# PORTAL CONFIGURATION
# =============================================================================
VITE_DEFAULT_PORTAL=internal
VITE_PORTAL_SWITCH_ENABLED=true
VITE_INTERNAL_PORTAL_URL=/internal
VITE_PATIENT_PORTAL_URL=/patient
VITE_SEDATIONIST_PORTAL_URL=/sedationist
VITE_CLINIC_PORTAL_URL=/clinic

# =============================================================================
# MONITORING & LOGGING
# =============================================================================
VITE_LOG_LEVEL=info
VITE_ENABLE_PROMETHEUS_METRICS=true
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_ERROR_REPORTING=false
VITE_ENABLE_DEBUG_LOGGING=false

# =============================================================================
# DEVELOPMENT CONFIGURATION
# =============================================================================
VITE_MOCK_API=false
VITE_SHOW_DEV_TOOLS=true
VITE_ENABLE_DEV_TOOLS=true